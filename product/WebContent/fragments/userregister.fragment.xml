<core:FragmentDefinition
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	controllerName="product.controllers.mainview"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog>
		<f:SimpleForm maxContainerCols="2"
			layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2"
			emptySpanL="0" columnsL="1" columnsM="1" id="sform">
			<f:content>
				<Label text="User ID" required="true"/>
					<Input id="uid" width="40%" value="{/productid}"/>
				<Label text="User Name" required="true"/>
					<Input id="un" width="40%"/>
				<Label text="Validity" required="true"/>
					<Input id="validity" width="40%"/>
				<Label text="membership" required="true" />
					<Input id="ms"  width="40%" />
				<Button text="Submit" width="20%" press=".onSubmit1"/><Button text="Close" width="20%" press=".onclose1"/>
			</f:content>
		</f:SimpleForm>
	</Dialog>
</core:FragmentDefinition>