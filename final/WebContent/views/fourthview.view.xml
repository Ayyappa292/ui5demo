<core:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="final.controllers.fourthview"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Welcome User {
    path : 'person/name',
    formatter : '.myFormatter'
}" id="mainpage">
		<content>

			<tnt:ToolHeader active="true">
				<Button icon="sap-icon://menu2" type="Transparent" />
				<Image src="test-resources/sap/tnt/images/SAP_Logo.png" />
				<ToolbarSpacer />
				<Toolbar>
				</Toolbar>
				<Button icon="sap-icon://task" type="Transparent" />
				<Button icon="sap-icon://bell" type="Transparent" />
				<Button icon="sap-icon://user-settings" type="Transparent" />
				<Button text="Logout" icon="sap-icon://log"
					type="Transparent" press="onLogout" />
			</tnt:ToolHeader>
			<SplitApp id="splitapp" initialDetail="detail"
				initialMaster="master">
				<detailPages>
					<Page id="detail">
					<content>
					<FlexBox alignContent="Center" class="myflexbox">
					<items>
					<core:Icon src="sap-icon://detail-view" size="200px"/>
					</items>
					</FlexBox>
					<Text text="Click on a user to display users Personal information"  class="myemptypage"/>
					</content>
					</Page>
					<Page id="demo1" title="User Information"
						backgroundDesign="Solid">
						<IconTabBar class="sapUiResponsiveContentPadding">
							<items>
								<IconTabFilter icon="sap-icon://table-chart"
									text="Table">
									<content>
										<Table headerText="info">
											<columns>
												<Column width="12em">
													<Text text="Si.No" />
												</Column>
												<Column>
													<Text text="Name" />
												</Column>
												<Column>
													<Text text="Employee ID" />
												</Column>
											</columns>
											<items>
												<ColumnListItem>
													<cells>
														<Text text="1" />
													</cells>
													<cells>
														<Text text="Ayyappa" />
													</cells>
													<cells>
														<Text text="501" />
													</cells>
												</ColumnListItem>
												<ColumnListItem>
													<cells>
														<Text text="2" />
													</cells>
													<cells>
														<Text text="Manikanta" />
													</cells>
													<cells>
														<Text text="502" />
													</cells>
												</ColumnListItem>
												<ColumnListItem>
													<cells>
														<Text text="3" />
													</cells>
													<cells>
														<Text text="Siva" />
													</cells>
													<cells>
														<Text text="503" />
													</cells>
												</ColumnListItem>
												<ColumnListItem>
													<cells>
														<Text text="4" />
													</cells>
													<cells>
														<Text text="Likitha" />
													</cells>
													<cells>
														<Text text="504" />
													</cells>
												</ColumnListItem>
												<ColumnListItem>
													<cells>
														<Text text="5" />
													</cells>
													<cells>
														<Text text="Alekhya" />
													</cells>
													<cells>
														<Text text="505" />
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</content>
								</IconTabFilter>
								<IconTabSeparator />
								<IconTabFilter text="Profile"
									icon="sap-icon://account">
									<content>

										<List items="{idontknow>/details}">
												<StandardListItem title="Full Name :- {idontknow>fullname}"/>
												</List>
											<List items="{idontknow>/details}">
												<StandardListItem title="User Name :- {idontknow>username}"/>
												</List>
											<List items="{idontknow>/details}">
												<StandardListItem title="Email Id :-{idontknow>email}"/>
										</List>
										<List items="{idontknow>/details}">
												<StandardListItem title="Contact Info :-{idontknow>phonenumber}"/>
										</List>
									</content>
								</IconTabFilter>
							</items>
						</IconTabBar>
					</Page>
				</detailPages>
				<masterPages>
					<Page id="master" title="Users" backgroundDesign="List">
						<SearchField width="100%" liveChange=".onSearch"/>
						<List items="{idontknow>/ouser}" mode="SingleSelectMaster"
							selectionChange=".onselectChange" id="listid">
							<StandardListItem title="{idontknow>username}"
								type="Navigation" custom:to="demo1" id="id1" />
						</List>
					</Page>

				</masterPages>
			</SplitApp>
		</content>
	</Page>
</core:View>

