<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"  xmlns="sap.m" xmlns:f="sap.ui.layout.form"
		controllerName="sample.sample" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Registration Page">
		<content>
	<f:SimpleForm>
	<f:title>
	<core:Title text="Registration Form"/>
	</f:title>
	<f:content>
	<Label text="Full Name" id="fname" required="true" vAlign="Middle"/>
	<Input id="fullname1" width="50%" value="{data>/name}"/><Input id="fullname2" editable="false" valueLiveUpdate="true"/>
	<Label text="UserName" id="uname" required="true"/>
	<Input id="username1" width="50%"/><Input id="username2" editable="false" valueLiveUpdate="true"/>
	<Label text="Email-Id" id="emailid" required="true"/>
	<Input id="email1" width="50%"/><Input id="email2" editable="false" valueLiveUpdate="true"/>
	<Label text="Password" id="pass" required="true"/>
	<Input id="pass1" width="50%"/><Input id="pass2" editable="false" valueLiveUpdate="true"/>
	<Label text="Mobile Number" id="mobilenumber" required="true"/>
	<Input id="mobile1" width="50%"/><Input id="mobile2" editable="false" valueLiveUpdate="true"/>	
	<Label/>
	<Button type="Accept" text="Submit" press="onPress"  width="20%"/>
	</f:content>
	</f:SimpleForm>
	
		</content>
	</Page>
</core:View>